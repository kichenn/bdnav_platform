<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdxh.school.mapper.VisitLogsMapper">

	<resultMap id="BaseResultMap" type="com.bdxh.school.entity.VisitLogs">
	  <id column="id" jdbcType="BIGINT" property="id"/>
	  <result column="school_id" jdbcType="INT" property="schoolId"/>
	  <result column="school_name" jdbcType="VARCHAR" property="schoolName"/>
	  <result column="school_code" jdbcType="CHAR" property="schoolCode"/>
		<result column="student_id" jdbcType="BIGINT" property="studentId"/>
	  <result column="card_number" jdbcType="VARCHAR" property="cardNumber"/>
	  <result column="user_name" jdbcType="VARCHAR" property="userName"/>
	  <result column="url" jdbcType="VARCHAR" property="url"/>
	  <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
	  <result column="update_date" jdbcType="TIMESTAMP" property="updateDate"/>
	  <result column="status" jdbcType="TINYINT" property="status"/>
	  <result column="remark" jdbcType="VARCHAR" property="remark"/>
	</resultMap>

	<sql id="BaseColumns">
	  id,school_id,school_name,school_code,student_id,card_number,user_name,url,create_date,update_date,status,remark
	</sql>
	<select id="getVisitLogsAllCount" resultType="Integer">
	  SELECT 
	   COUNT(1)
	  FROM t_visit_logs 
	</select>

	<delete id="delVisitLogsInIds" parameterType="Integer">
	  DELETE
	   FROM t_visit_logs
	  WHERE
	   id IN
	     <foreach collection = "ids" item = "id" separator = "," open = "(" close = ")" >
	          #{id, jdbcType = BIGINT}
	     </foreach >
	</delete>

</mapper>
