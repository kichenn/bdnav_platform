            <if test="UserId!=null">
                AND user_id=#{UserId}
            </if>
            <if test="CardNumber!=null and CardNumber!=''">
                AND card_number LIKE CONCAT(CONCAT('%',#{CardNumber},'%'))
            </if>
        </where>
        ORDER BY create_date DESC
    </select>


